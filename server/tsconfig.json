{
  "compilerOptions": {
    /* Project Structure */
    "outDir": "./dist",                       /* Output directory for compiled files */
    "rootDir": "./src",                       /* Root directory for your source code */
    "module": "commonjs",                     /* CommonJS for Node.js compatibility */
    "target": "ES2022",                       /* Latest stable ECMAScript version */
    "moduleResolution": "node",               /* Resolves modules like Node.js */
    "resolveJsonModule": true,                /* Enables importing JSON files */
    "allowJs": true,                          /* Allows JavaScript files in the project */
    "checkJs": false,                         /* Disables type-checking for .js files */

    /* Strict Type Checking */
    "strict": true,                           /* Enables all strict type-checking options */
    "noImplicitAny": true,                    /* Ensures explicit type definitions */
    "strictNullChecks": true,                 /* Ensures null/undefined are handled */
    "noImplicitReturns": true,                /* Ensures all code paths return a value */
    "noFallthroughCasesInSwitch": true,       /* Prevents unintentional fallthrough in switch cases */

    /* Code Quality */
    "skipLibCheck": true,                     /* Skips type-checking library files for faster builds */
    "forceConsistentCasingInFileNames": true, /* Prevents inconsistent import case errors */
    
    /* Emit Configuration */
    "sourceMap": true,                        /* Generates source maps for debugging */
    "removeComments": true,                   /* Strips comments from emitted files */
    "noEmitOnError": true,                    /* Prevents emitting files if errors exist */
    
    /* Experimental / Advanced Options */
    "esModuleInterop": true,                  /* Ensures compatibility with CommonJS/ESM */
    "allowSyntheticDefaultImports": true,     /* Allows default imports for CommonJS */
    "experimentalDecorators": true,           /* Enables decorators for advanced patterns */
    "emitDecoratorMetadata": true             /* Required for libraries like TypeORM */
  },
  "include": ["src/**/*.ts"],                 /* Includes all .ts files in /src */
  "exclude": ["node_modules", "**/*.test.ts"] /* Excludes tests and dependencies */
}
